@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-link"><a asp-controller="Account" asp-action="Profile">@User.Identity.Name</a></li>
        <li class="navbar-link"><a asp-controller="Account" asp-action="SignOut">Sign Out</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="SignUp">Sign up</a></li>
        <li><a asp-controller="Account" asp-action="SignIn">Sign in</a></li>
    </ul>
}